@model ContactManagerWeb.ViewModels.ContactViewModel

@{ var title = "Contact"; }

<div id="target">
    <div class="modal-header">
        <h4 class="modal-title">@title</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="row pb-3">
            <div class="col-4 font-weight-bold">@Html.DisplayNameFor(model => model.FirstName)</div>
            <div class="col-8">@Html.DisplayFor(model => model.FirstName)</div>
        </div>
        <div class="row pb-3">
            <div class="col-4 font-weight-bold">@Html.DisplayNameFor(model => model.MiddleInitial)</div>
            <div class="col-8">@Html.DisplayFor(model => model.MiddleInitial)</div>
        </div>
        <div class="row pb-3">
            <div class="col-4 font-weight-bold">@Html.DisplayNameFor(model => model.LastName)</div>
            <div class="col-8">@Html.DisplayFor(model => model.LastName)</div>
        </div>
        <div class="row pb-3">
            <div class="col-4 font-weight-bold">@Html.DisplayNameFor(model => model.Email)</div>
            <div class="col-8">@Html.DisplayFor(model => model.Email)</div>
        </div>
        <div class="row pb-3">
            <div class="col-4 font-weight-bold">@Html.DisplayNameFor(model => model.HomePhone)</div>
            <div class="col-8">@Html.DisplayFor(model => model.HomePhone)</div>
        </div>
        <div class="row pb-3">
            <div class="col-4 font-weight-bold">@Html.DisplayNameFor(model => model.CellPhone)</div>
            <div class="col-8">@Html.DisplayFor(model => model.CellPhone)</div>
        </div>
        <div class="row pb-3">
            <div class="col-4 font-weight-bold">@Html.DisplayNameFor(model => model.OfficeExtension)</div>
            <div class="col-8">@Html.DisplayFor(model => model.OfficeExtension)</div>
        </div>
        <div class="row pb-3">
            <div class="col-4 font-weight-bold">@Html.DisplayNameFor(model => model.IrdNumber)</div>
            <div class="col-8">@Html.DisplayFor(model => model.IrdNumber)</div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
</div>