@model ContactManagerWeb.ViewModels.ContactViewModel
@{ ViewData["Title"] = "Edit"; }

<h1 class="display-4">@ViewData["Title"]</h1>

<hr />

<p><a asp-action="Index">Back</a><p>

@using (Html.BeginForm("Edit", "Contacts", FormMethod.Post))
{
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        @await Html.PartialAsync("../Shared/EditorTemplates/_ContactInputs", Model)
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-default">Cancel</a>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/imageUploader.js"></script>
}