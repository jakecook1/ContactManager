@model ContactManagerWeb.ViewModels.ContactViewModel
@{
    ViewData["Title"] = "Details";
    var imageSource = string.IsNullOrEmpty(Model.ImagePublicId)
                        ? "/images/profile_placeholder.png"
                        : Model.ThumbnailUrl;
}

<h1 class="display-4">@ViewData["Title"]</h1>

<hr />

<p><a asp-action="Index">Back</a></p>

<div class="d-flex flex-wrap">
    <div class="mb-3 mr-3">
        <img src="@imageSource" alt="Profile" class="img-fluid img-thumbnail">
    </div>
    <div class="flex-fill">
        <h5>@Html.DisplayFor(model => model.FullName)</h5>
        <p>@Html.DisplayFor(model => model.Email)</p>

        <h5 class="pt-3">Contact Information</h5>
        <div class="row pb-3">
            <div class="col-3 font-weight-bold">@Html.DisplayNameFor(model => model.HomePhone)</div>
            <div class="col-9">@Html.DisplayFor(model => model.HomePhone)</div>
        </div>
        <div class="row pb-3">
            <div class="col-3 font-weight-bold">@Html.DisplayNameFor(model => model.CellPhone)</div>
            <div class="col-9">@Html.DisplayFor(model => model.CellPhone)</div>
        </div>
        <div class="row pb-3">
            <div class="col-3 font-weight-bold">@Html.DisplayNameFor(model => model.OfficeExtension)</div>
            <div class="col-9">@Html.DisplayFor(model => model.OfficeExtension)</div>
        </div>
        <div class="row pb-3">
            <div class="col-3 font-weight-bold">@Html.DisplayNameFor(model => model.IrdNumber)</div>
            <div class="col-9">@Html.DisplayFor(model => model.IrdNumber)</div>
        </div>
    </div>
</div>